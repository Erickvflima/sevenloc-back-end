{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/@types/express.d.ts"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDirs": ["./src", "."],
    "paths": {
      "@*": ["./src/*"],
      "@modules/*": ["src/modules/*"],
      "@config/*": ["src/config/*"],
      "@enums/*": ["src/enums/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/@types/*.d.ts"]
}
